{
  "compilerOptions": {
    "experimentalDecorators": true,
    "suppressExcessPropertyErrors": true,
    "downlevelIteration": true,
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./lib",
    "target": "es5",
    "strictNullChecks": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "jsx": "react",
    "baseUrl": ".",
    "lib": ["dom", "es2015"],
  },
  "include": ["packages/*/src", "stories/"],
  "exclude": ["node_modules", "**/*.spec.ts", "./dist", "**/*.test.ts"]
}
